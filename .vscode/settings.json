{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },

    "flake8.args": [
        "--max-line-length=100",
        "--extend-ignore=E203"
    ],

    "black-formatter.args": ["--line-length=100"],

    "files.insertFinalNewline": true
}
